
<div id="yui-main">
    <div class="yui-g">
        <div id="random" class="yui-u first block">
            <h2>Random</h2>
            <h3><%= link_to @random.name, :action => 'show', :id => @random %></h3>
            <%=makeCloud(@random)%>
        </div>
        
        <div class="yui-g block">
            
            <div id="popular" class="yui-u">
                <h2>Popular</h2>
                <ol>
                    <%@recent.each do |c|%>
                        <li><%= link_to c.name, :action => 'show', :id => c %></li>
                    <%end%>
                </ol>
            </div>
        
            <div id="recent" class="yui-u">
                <h2>Recent</h2>
                <ol>
                    <%@recent.each do |c|%>
                        <li><%= link_to c.name, :action => 'show', :id => c %></li>
                    <%end%>
                </ol>
            </div>
            
        </div>
    </div>

